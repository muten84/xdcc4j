<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
>
	<ui:style>
	body {
		padding-top: 0px;
	}
	
	.modal {
		margin-left: -400px; !important
	}
	</ui:style>

	<g:HTMLPanel>
		<!-- <b:Heading size="2">Xdcc Downloader</b:Heading> -->
		<b:Dropdown
			text="Select server"
			icon="GITHUB"
		>
			<b:NavLink>irc.uragano.org</b:NavLink>
			<b:NavLink>irc.crocmax.net</b:NavLink>
		</b:Dropdown>
		<b:ResponsiveNavbar>
			<b:Brand>Xdcc Downloader</b:Brand>
			<!-- <b:Nav> <b:NavLink>Test</b:NavLink> <b:NavLink href="http://www.google.com">Another 
				Test</b:NavLink> </b:Nav> <b:NavForm size="1" /> <b:Nav alignment="RIGHT"> 
				<b:NavLink>Test</b:NavLink> </b:Nav> <b:NavText alignment="RIGHT">Right</b:NavText> -->
			<b:NavSearch
				ui:field="searchText"
				size="2"
				placeholder="Search"
				alignment="LEFT" />

		</b:ResponsiveNavbar>
		<b:FluidRow>
			<b:Column size="12">
				<g:HTMLPanel>
					<b:Modal
						ui:field="searchModal"
						title="Risultato della ricerca"
						backdrop="STATIC"
						keyboard="true"
						animation="true"
						maxHeigth="600px"
						width="800px"
					>
						<g:Label width="750px">Modal Content!</g:Label>
						<b:ModalFooter>
				<!-- <b:Button
					icon="FILE"
					type="PRIMARY"
				>Save</b:Button> -->
						</b:ModalFooter>
					</b:Modal>
				</g:HTMLPanel>
			</b:Column>
		</b:FluidRow>
	</g:HTMLPanel>
</ui:UiBinder> 